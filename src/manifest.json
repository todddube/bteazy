{
  "manifest_version": 3,
  "name": "BTEazy",
  "version": "1.1.0",
  "description": "Effortlessly download torrents with BTEazy. Converts magnet links, tracks download history, and features a modern dark UI.",

  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "93",

  "author": "BTEazy Team"
}
